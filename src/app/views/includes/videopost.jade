.panel.panel-default
   .panel-body
      .panel.panel-default(style="margin-bottom: 0")
         .panel-body(style="padding-bottom: 0")
            .col-xs-2.col-md-2.text-center
               img.thumbnail(width="50px"  src="/public/img/test-profile-pic.jpg")
            .col-xs-8.col-md-8
               h3(style="margin-top: 0;"): a(href="") #{ user.firstName } #{ user.lastName }
               h5(style="margin-top: 0; margin-bottom: 0") #[small Sep 21, 2015]

      video(preload="auto" width="100%" src=video.videoURL controls)

      //- var comments = ['This is a sample comment', 'This is another comment']
      .panel-group
         - for comment in comments
            .panel.panel-default
               .panel-body
                  | #{ comment.comment }
         .panel.panel-default
            .panel-body