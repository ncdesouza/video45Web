<!-- views/signup.ejs -->
<!doctype html>
<html xmlns="http://www.w3.org/1999/html">
<head>
    <title>video45 - Sign Up</title>
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="/public/bootstrap/css/bootstrap.min.css">
    <!-- load fontawesome -->
    <link rel="stylesheet" href="/public/font-awesome/css/font-awesome.min.css">
    <style>
        body {
            padding-top: 80px;
        }
    </style>
    <link rel="stylesheet" href="bower_components/BigVideo/css/bigvideo.css">
    <link rel="stylesheet" href="/public/css/style.css">
</head>

<body>

<div class="main">

    <div class="container">

        <div class="jumbotron text-center">

            <div class="col-xs-12 col-sm-12">
                <h1 class="text-left">video45</h1>
                <h2 class="text-left"><span class="fa fa-sign-in"></span> Sign Up</h2>
                <br>
            </div>

            <div class="col-xs-8 col-sm-8" style="border-right:1px solid #000;height:100%">

                <div class="col-xs-11 col-sm-11 pull-left">

                    <!-- show any messages that come back with authentication -->
                    <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %>

                    <!-- Sign Up form -->
                    <form class="form-horizontal" action="/signup" method="post" role="form">

                        <div class="row">

                            <div class="form-group">

                                <!-- First name and Last Name-->
                                <div class="col-xs-6 col-sm-6">
                                    <input type="text" class="form-control" name="firstName" placeholder="First Name">
                                </div>

                                <div class="col-xs-6 col-sm-6">
                                    <input type="text" class="form-control" name="lastName" placeholder="Last Name">
                                </div>

                            </div>

                        </div>

                        <div class="row">

                            <!-- Email -->
                            <div class="form-group">

                                <div class="col-xs-12 col-sm-12">
                                    <input type="text" class="form-control" name="email" placeholder="Email">
                                </div>


                            </div>

                        </div>

                        <div class="row">

                            <!-- username -->
                            <div class="form-group">

                                <div class="col-xs-12 col-sm-12">
                                    <input type="text" class="form-control" name="username" placeholder="Username">
                                </div>


                            </div>

                        </div>

                        <div class="row">

                            <!-- Password -->
                            <div class="form-group">

                                <div class="col-xs-12 col-sm-12">
                                    <input type="password" class="form-control" name="password" placeholder="Password">
                                </div>

                            </div>

                        </div>

                        <div class="row">

                            <div class="col-xs-12 col-sm-12 pull-left">
                                <button type="submit" class="btn btn-success btn-lg btn-block">Sign Up</button>
                            </div>

                        </div>

                    </form>

                </div>

            </div>

            <div class="col-xs-4 col-sm-4">

                <div class="col-xs-11 col-sm-11">
                    <h5>Or<br> <b>Sign Up</b><br> with:<br></h5>
                </div>
                <div class="btn-group-vertical">
                <div class="col-xs-11 col-sm-11">
                    <div class="row">
                        <div  class="col-xs-12 col-sm-12">
                            <a href="/auth/facebook" class="btn btn-primary btn-block">
                                <span class="fa fa-facebook-official">&nbspFacebook&nbsp&nbsp&nbsp</span>
                            </a>
                        </div>
                    </div>

                    <div class="row"><br></div>

                    <div class="row">
                        <div  class="col-xs-12 col-sm-12">
                            <a href="/auth/twitter" class="btn btn-info btn-block">
                                <span class="fa fa-twitter-square">&nbspTwitter&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</span>

                            </a>
                        </div>
                    </div>

                    <div class="row"><br></div>

                    <div class="row">
                        <div  class="col-xs-12 col-sm-12">
                            <a href="/auth/google" class="btn btn-danger btn-block">
                                <span class="fa fa-google-plus-square">&nbspGoogle+&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</span>

                            </a>
                        </div>
                    </div>
                </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12">
                    <br>
                    <hr>
                    <p>Already have an account? <a href="/">Login</a></p>
                </div>
            </div>

        </div>

    </div>

</div>

<script src="../bower_components/jquery/dist/jquery.min.js"></script>
<script src="../bower_components/jquery-ui/jquery-ui.js"></script>
<script src="../bower_components/jquery-ui/jquery-ui.min.js"></script>
<script src="../bower_components/video.js/dist/video-js/video.js"></script>
<script src="../bower_components/BigVideo/lib/bigvideo.js"></script>
<script>
    $(function() {
        var BV = new $.BigVideo();
        var vids = [
            'public/vid/river.mp4',
            'public/vid/dock.mp4',
            'public/vid/frontier.mp4'
        ];

        BV.init();
        BV.show('public/vid/dock.mp4', {ambient:true});
    });
</script>

</body>
</html>