<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="/public/bootstrap/css/bootstrap.min.css">
    <!-- load fontawesome -->
    <link rel="stylesheet" href="/public/font-awesome/css/font-awesome.min.css">
    <style>
        body {
            padding-top: 80px;
        }
    </style>
    <link rel="stylesheet" href="bower_components/BigVideo/css/bigvideo.css">
    <link rel="stylesheet" href="/public/css/style.css">
</head>

<body>

<div class="main">

    <div class="container">

        <div class="jumbotron text-center">

            <div class="col-xs-12 col-sm-12">
                <h1 class="text-left"> video45</h1>
                <h3 class="text-left"><span class="fa fa-lock"></span> Log in:</h3>
            </div>

            <div class="row">
                <div class="col-xs-9 col-sm-9">

                    <!-- show any messages that come back with authentication -->
                    <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                </div>
            </div>


            <!-- LOGIN FORM -->
            <form action="/login" method="post" class="form-horizontal">

                <!-- Email / Username field -->
                <div class="col-xs-9 col-sm-9">

                    <div class="form-group">

                        <input type="text" class="form-control" name="email" placeholder="Email or Username">

                    </div>

                </div>

                <!-- Password field -->
                <div class="col-xs-9 col-sm-9">

                    <div class="form-group">

                        <input type="password" class="form-control" name="password" placeholder="Password">

                    </div>

                </div>

                <div class="col-xs-3 col-sm-3">

                    <button type="submit" class="btn btn-success btn-block">Login</button>

                </div>

            </form>

            <div class="row">

                <div class="col-xs-12 col-sm-12">

                    <div class="row">

                    <div class="col-xs-9 col-sm-9">
                        <p>or</p>
                    </div>
                    </div>

                    <div  class="col-xs-3 col-sm-3">
                        <a href="/login/facebook" class="btn btn-primary btn-block">
                            &nbsp<span class="fa fa-facebook-official">&nbspFacebook</span>&nbsp
                        </a>
                    </div>

                    <div  class="col-xs-3 col-sm-3">
                        <a href="/login/twitter" class="btn btn-info btn-block">
                            &nbsp<span class="fa fa-twitter-square">&nbspTwitter</span>&nbsp

                        </a>
                    </div>

                    <div  class="col-xs-3 col-sm-3">
                        <a href="/login/google" class="btn btn-danger btn-block">
                            &nbsp<span class="fa fa-google-plus-square">&nbspGoogle+</span>&nbsp
                        </a>
                    </div>


                </div>

            </div>

            <div class="row">

                <div class="col-xs-12 col-sm-12">

                    <hr>
                    <p>Need an account? <a href="/signup">Sign Up</a></p>

                </div>

            </div>

        </div>

    </div>

</div>


<script src="../bower_components/jquery/dist/jquery.min.js"></script>
<script src="../bower_components/jquery-ui/jquery-ui.js"></script>
<script src="../bower_components/jquery-ui/jquery-ui.min.js"></script>
<script src="../bower_components/video.js/dist/video-js/video.js"></script>
<script src="../bower_components/BigVideo/lib/bigvideo.js"></script>
<script>
    $(function() {
        var BV = new $.BigVideo();
        BV.init();
        BV.show('/public/vid/river.mp4', {ambient:true});
    });
</script>

</body>
</html>