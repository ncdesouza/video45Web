<!doctype html>
<html>
<head>
<% include templates/header %>
</head>

<body>

<div class="main">

    <div class="container">

        <div class="jumbotron text-center">

            <div class="col-xs-12 col-sm-12">
                <h1 class="text-left"><span class="fa fa-cog"></span> Setup Account</h1>
                <br>
            </div>

            <div class="col-xs-8 col-sm-8" style="border-right:1px solid #000;height:100%">

                <div class="col-xs-11 col-sm-11 pull-left">

                    <!-- Sign Up form -->
                    <form class="form-horizontal" action="/setup" method="post" role="form">

                        <div class="row">

                            <div class="form-group">

                                <!-- First name and Last Name-->
                                <div class="col-xs-12 col-sm-12">
                                    <input type="file" class="form-control" name="dp">
                                </div>

                            </div>

                        </div>

                        <div class="row">

                            <!-- Email -->
                            <div class="form-group">

                                <div class="col-xs-12 col-sm-12">
                                    <input type="text" class="form-control" name="email" placeholder="Email">
                                </div>


                            </div>

                        </div>

                        <div class="row">

                            <!-- username -->
                            <div class="form-group">

                                <div class="col-xs-12 col-sm-12">
                                    <input type="password" class="form-control" name="password" placeholder="Password">
                                </div>


                            </div>

                        </div>

                        <div class="row">

                            <!-- Password -->
                            <div class="form-group">

                                <div class="col-xs-12 col-sm-12">
                                    <input type="password" class="form-control" name="password2" placeholder="Password">
                                </div>

                            </div>

                        </div>

                        <div class="row">

                            <div class="col-xs-12 col-sm-12 pull-left">
                                <button type="submit" class="btn btn-success btn-lg btn-block">Sign Up</button>
                            </div>

                        </div>

                    </form>

                </div>

            </div>

            <div class="col-xs-4 col-sm-4">

                <div class="col-xs-11 col-sm-11">
                    <h5>Or<br> <b>Sign Up</b><br> with:<br></h5>
                </div>
                <div class="btn-group-vertical">
                    <div class="col-xs-11 col-sm-11">
                        <div class="row">
                            <div  class="col-xs-12 col-sm-12">
                                <a href="/auth/facebook" class="btn btn-primary btn-block">
                                    <span class="fa fa-facebook-official">&nbspFacebook&nbsp&nbsp&nbsp</span>
                                </a>
                            </div>
                        </div>

                        <div class="row"><br></div>

                        <div class="row">
                            <div  class="col-xs-12 col-sm-12">
                                <a href="/auth/twitter" class="btn btn-info btn-block">
                                    <span class="fa fa-twitter-square">&nbspTwitter&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</span>

                                </a>
                            </div>
                        </div>

                        <div class="row"><br></div>

                        <div class="row">
                            <div  class="col-xs-12 col-sm-12">
                                <a href="/auth/google" class="btn btn-danger btn-block">
                                    <span class="fa fa-google-plus-square">&nbspGoogle+&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</span>

                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12">
                    <br>
                    <hr>
                    <p>Already have an account? <a href="/">Login</a></p>
                </div>
            </div>

        </div>

    </div>

</div>

<script src="../bower_components/jquery/dist/jquery.min.js"></script>
<script src="../bower_components/jquery-ui/jquery-ui.js"></script>
<script src="../bower_components/jquery-ui/jquery-ui.min.js"></script>
<script src="../bower_components/video.js/dist/video-js/video.js"></script>
<script src="../bower_components/BigVideo/lib/bigvideo.js"></script>
<script>
    $(function() {
        var BV = new $.BigVideo();
        var vids = [
            'public/vid/river.mp4',
            'public/vid/dock.mp4',
            'public/vid/frontier.mp4'
        ];

        BV.init();
        BV.show('public/vid/dock.mp4', {ambient:true});
    });
</script>

</body>